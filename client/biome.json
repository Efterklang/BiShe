{
    "$schema": "https://biomejs.dev/schemas/latest/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**",
            "!**/*.min.js",
            "!**/*.min.css",
            "!node_modules"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useValidAnchor": "off"
            },
            "suspicious": {
                "noAssignInExpressions": "off"
            },
            "complexity": {
                "noImportantStyles": "off"
            }
        }
    },
    "javascript": {
        "linter": {
            "enabled": true
        },
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
